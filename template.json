{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "root<enter><wait>",
        "mfsroot<enter><wait>",
        "fetch http://{{.HTTPIP}}:{{.HTTPPort}}/setup.sh<enter><wait10>"
      ],
      "boot_wait": "30s",
      "disk_size": 20480,
      "guest_os_type": "FreeBSD_64",
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "56d1b62a05e3f626bee856efab39c971b8885873e0a8484f9870aa0363575fce",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mfsbsd.vx.sk/files/iso/10/amd64/mfsbsd-se-10.1-RELEASE-amd64.iso",
      "shutdown_command": "poweroff; poweroff",
      "ssh_password": "mfsroot",
      "ssh_username": "root",
      "ssh_wait_timeout": "900s",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "root<enter><wait>",
        "mfsroot<enter><wait>",
        "fetch http://{{.HTTPIP}}:{{.HTTPPort}}/setup.sh<enter><wait10>"
      ],
      "boot_wait": "30s",
      "disk_size": 20480,
      "guest_os_type": "freebsd-64",
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "56d1b62a05e3f626bee856efab39c971b8885873e0a8484f9870aa0363575fce",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mfsbsd.vx.sk/files/iso/10/amd64/mfsbsd-se-10.1-RELEASE-amd64.iso",
      "shutdown_command": "poweroff; poweroff",
      "skip_compaction": true,
      "ssh_password": "mfsroot",
      "ssh_username": "root",
      "ssh_wait_timeout": "900s",
      "vmx_data": {
        "memsize": "1024"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/bootstrap.sh",
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}"
    }
  ],
  "post-processors": [
    {
      "output": "freebsd-10.1-{{.Provider}}.box",
      "type": "vagrant",
      "keep_input_artifact": false,
      "override": {
        "vmware": {
          "vagrantfile_template": "files/Vagrantfile.vmware"
        },
        "virtualbox": {
          "vagrantfile_template": "files/Vagrantfile.virtualbox"
        }
      }
    }
  ]
}
